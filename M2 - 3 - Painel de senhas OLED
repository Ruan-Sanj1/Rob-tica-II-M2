#include <Adafruit_BusIO_Register.h>
#include <Adafruit_SSD1306.h>
#include <Adafruit_GFX.h>

Adafruit_SSD1306 display(128, 64);
int senha = 
#define botaoCIMA 
#define botaoBAIXO 
#define buzzer 

void setup() {
    display.begin(SSD1306_SWITCHCAPVCC, 0X3C);
    pinMode();
    pinMode();
    pinMode();
    display.setTextColor();
}

void loop() {
    display.setCursor(18, 0);
    display.setTextSize(1);
    display.print(“PAINEL DE SENHAS”);
    /* Desenha um retângulo (x,y, w,h, arredondamento, cor), */
    display.drawRoundRect(0, 10, 128, 47, 10, WHITE);
    display.setCursor(20, 57);
    display.print(“Rob”);
    /* Imprime o caracter ASCII ó */
    display.write(162);
    display.print(“tica Paran”);
    /* Imprime o caracter ASCII á */
    display.write(160);
    display.setCursor(35, 15);
    display.setTextSize(2);
    display.print(“SENHA”);
    display.setCursor(48, 35);
    if (senha < ) {
        display.print(String(“00”) + senha);
    }
    if ((senha > ) && (senha < )) {
        display.print(String(“0”) + senha);
    }
    if (senha >) {
        display.print(senha);
    }

    if (digitalRead() == 0) {
        senha += 1;
        if (senha > ) {
            senha = ;
        }
        tone(buzzer, 262, 250);
        delay(250);
        tone(buzzer, 2093, 400);
        delay(400);
    }

    if (digitalRead() == 0) {
        senha += -1;
        if (senha < ) {
            senha = ;
        }
        tone(buzzer, 262, 250);
        delay(250);
        tone(buzzer, 2093, 400);
        delay(400);
    }
    display.display();
    display.clearDisplay();
}
